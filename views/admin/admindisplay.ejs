                      <th>Action</th>
                      <% for(var i=0;i<mydata.length;i++){ %>
                       
                    </tr>
                 
                    <tr>
                      
                      <td><%= i+1 %></td>
                      <td><%= mydata[i].adminname %></td>
                      <td><%= mydata[i].adminemail %></td>
                      <td><%= mydata[i].adminmobile %></td>
                      <!--<td><%= mydata[i].adminpassword %></td>-->
                      <td>
                        <a href="/admin/show/<%= mydata[i]._id%>"> Show</a>
                    
                        <a href="/admin/edit/<%= mydata[i]._id%>"> Edit</a>
                        <a href="/admin/delete/<%= mydata[i]._id %>" onclick='return deletecheck()'>Delete</a>  
                      </td>
                    </tr>
                <%}%>
                </table>
              </div>
              <!-- /.card-body -->
              <div class="card-footer clearfix">
                <ul class="pagination pagination-sm m-0 float-right">
                  <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                  <li class="page-item"><a class="page-link" href="#">1</a></li>
                  <li class="page-item"><a class="page-link" href="#">2</a></li>
